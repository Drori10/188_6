doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='styles.css')
  title Herrods Munchies - Sign Up
  script(src='nightmode.js')
nav.animated.fade-in
  ul
    li.right-link
      a(href='/PSignIn') Login
  ul.navbar-right
    li
      button(onclick='toggleNightMode()') Toggle Night Mode
p
.container
  #logo-container
    img#logo(src='/IMG/racoon.png' alt='Logo' height='175px' width='175px')
  h2 Sign Up
  form(action='/NewSignUp' method='GET' onsubmit='return validateForm()')
    // Full Name
    .form-group
      label(for='fullname') Full Name
      input#fullName(type='text' pattern='[A-Za-z]+ [A-Za-z]+' oninvalid="this.setCustomValidity('Please enter a valid full name.')" oninput="this.setCustomValidity('')" name='fullname' required='')
    // ID Number
    .form-group
      label(for='idNumber') ID Number
      input#idNumber(type='text' name='idnumber' pattern='[0-9]{9}' required='' oninvalid="this.setCustomValidity('Please enter a 9-digit number.')" oninput="this.setCustomValidity('')")
    // Username
    .form-group
      label(for='username') Username
      input#username(type='text' name='username' required='')
    // Password
    .form-group
      label(for='password') Password
      input#password(type='password' name='password' required='')
    // email
    .form-group
      label(for='email') Email
      input#email(type='email' name='email' required='')
    // Course Number
    .form-group
      label(for='courseNumber') Course Number
      select#courseNumber(name='coursenumber' required='')
        option(value='') Select course number
        option(value='188') 188
        option(value='189') 189
    .centered-btn
      button.CookBtn(type='submit') Submit
p
