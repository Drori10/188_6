doctype html
head
  title Herrods Munchies - Recipes
  link(rel='stylesheet' href='styles.css')
  script(src='nightmode.js')
nav.animated.fade-in
  ul
    li
      a(href='/PAbout') About Us
    li
    li
      a(href='/PRecipes') View All Recipes
  ul.navbar-right
    li
      button(onclick='toggleNightMode()') Toggle Night Mode
    li
      a(href='/PSignIn') Log Out
main
  .container
    #logo-container
      img#logo(src='/IMG/racoon.png' alt='Logo' height='175px' width='175px')
    h2 Meals you can cook
    br
    form#ingredients-form(action='/PRecipes' method='post')
      table
        each row in IngData
          tr.container
              td.ItdImg 
                  img(src='/IMG/Ing/' + row.Picture, alt=row.Name, height="200px", width="200px")
              td.ItdName= row.Name
              td.checkbox-td
                  input.checkmark(type='checkbox')
      br
      button.CookBtn(type='submit') Let&apos;s Cook!
  

