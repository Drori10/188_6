doctype html
head
  title Herrods Munchies - Recipes
  link(rel='stylesheet', href='styles.css')
  script(src='nightmode.js')
nav.animated.fade-in
  ul
    li
      a(href='/PsAbout') About Us
    li
    li
      a(href='/PRecipes') View All Recipes
  ul.navbar-right
    li
      button(onclick='toggleNightMode()') Toggle Night Mode
    li
      a(href='/PSignIn') Log Out
main
  .container
    #logo-container
      img#logo(src='/IMG/RacoonLogo.png', alt='Logo', height='175px', width='175px')
    h2 Hello #{username}
    h3 Select the ingredients that you have:
    br
    form#ingredients-form(action='/MyIng', method='post')
      table
        each row, index in IngData
          tr.container
            td.ItdImg
              img(src=`/IMG/Ing/${row.Picture}`, alt=row.Name, height='200px', width='200px')
            td.ItdName= row.Name
            td.checkbox-td
              input.checkmark(type='checkbox', id=`Row${index + 1}`, name=`Row${index + 1}`)

      br
      button.CookBtn(type='submit') Let's Cook!
  footer
